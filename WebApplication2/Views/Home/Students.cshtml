@model Student

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Добавить студента</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f8ff; /* Светлый фон */
            margin: 20px;
        }
        h2 {
            color: #2c3e50; /* Цвет заголовка */
        }
        form {
            background-color: #ffffff; /* Фон формы */
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }
        label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
        }
        input[type="text"],
        input[type="email"] {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }
        button {
            background-color: #3498db; /* Цвет кнопки */
            color: white;
            padding: 10px 15px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }
        button:hover {
            background-color: #2980b9; /* Цвет кнопки при наведении */
        }
    </style>
</head>
<body>
    <h2>Добавить студента</h2>
    <form asp-action="Create" method="post">
        <div>
            <label>Имя:</label>
            <input type="text" name="Name" required />
        </div>
        <div>
            <label>Email:</label>
            <input type="email" name="Email" required />
        </div>
        <button type="submit">Добавить</button>
    </form>
</body>
</html>
